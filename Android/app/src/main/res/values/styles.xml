<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:label">@string/app_name</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- See http://jgilfelt.github.io/android-actionbarstylegenerator -->
    <!-- parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"> -->
    <style name="ActionBar"
            parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitleText</item>
        <!-- TODO should allow this to default to holo, but it's not visible on current background. -->
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Horizontal</item>
        <!--<item name="android:progressBarStyle">@style/ActionBarProgress</item> -->-->
    </style>

<!--
    <style name="ActionBarProgress" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="progressDrawable">@android:drawable/progress_horizontal_holo_dark</item>
        <item name="indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal_holo</item>
    </style>
-->


    <style name="ActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="ActionBarSubtitleText"
            parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>


    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Text.Loading">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="List" parent="Text">
        <!--<item name="android:textColor">@android:color/primary_text_light</item>-->
        <item name="android:background">@color/list_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="List.Title" parent="@android:style/TextAppearance.Medium">
        <!--<item name="android:textColor">@android:color/primary_text_light</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">3dip</item>
    </style>

    <style name="List.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="List.Body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/divider_blue</item>
        <item name="android:dividerHeight">3dip</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:background">@color/list_background</item>
    </style>

    <style name="List.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="List.TweetTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="List.TweetText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:background">@color/actionbar_white_background</item>
    </style>

    <style name="List.Rightlabel">
        <item name="android:gravity">right</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="List.Stoptime">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="List.Stopminutes">
        <item name="android:layout_width">48sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="List.Stoprealtime">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="List.Routedescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="List.Stopdescription" parent="List.Routedescription">
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="List.RouteandStoplabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">48sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="List.Stoplabel" parent="List.RouteandStoplabel">
        <item name="android:textColor">@color/grt_blue</item>
        <item name="android:background">@drawable/stopnumber</item>
    </style>

    <style name="List.Routelabel" parent="List.RouteandStoplabel">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grt_yellow</item>
        <item name="android:background">@drawable/routenumber</item>
    </style>

</resources>
